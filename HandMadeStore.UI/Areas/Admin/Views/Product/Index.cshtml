@* @model IEnumerable<Product> *@
    @using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization;
@inject IViewLocalizer locolaizer;

@{
    ViewData["Title"] = @locolaizer["Product List"];
    Layout = "~/Views/Shared/_Layout.cshtml";
    var IsArabic = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}



<div class="container-fluid p-1">
   
        <div class="mb-2">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">@locolaizer["Product List"]</h2>
            </div>
            <div class="col-6 text-end">
                 @if (IsArabic)
                {
                    <a style="margin-right:440px" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-square"></i> &nbsp; @locolaizer["Create Product"]
                    </a>

                }
                @if (!IsArabic)
                {
                    <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-square"></i> &nbsp; @locolaizer["Create Product"]
                    </a>

                }
               
            </div>

        </div>
          
        </div>

    <div class="border border-2 border-primary rounded mb-3 p-5">

        <table id="productTable" class="text-center pt-2 w-100" data-order='[[ 0, "desc" ]]' data-page-length='5' style="border-collapse: separate;
    border-spacing:0 20px;">
                <thead>
                    <tr>
                        <th>
                            @locolaizer["Product Name"]
                        </th>
                       
                        <th class="text-center">
                            @locolaizer["Price"]
                        </th>

                        <th class="text-center">
                            @locolaizer["Category Name"]
                        </th>
                        <th class="text-center">
                            @locolaizer["Brand"]
                        </th>

                        <th class="text-center">
                             @locolaizer["Created Date"]
                        </th>
                        <th class="text-center">
                             @locolaizer["Image"]
                        </th>
                        <th class="text-center" width="10%">
                            @locolaizer["Action"]
                        </th>
                    </tr>
                </thead>

              


            </table>
      </div>
    </div>


  


  @section Scripts{

    
   @*  <script src="http://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script> *@
    <script src="~/js/product.js"></script>
  
  }





